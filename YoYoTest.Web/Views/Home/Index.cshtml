@{
    ViewData["Title"] = "Home Page";
}
@model YoYoTest.Web.ViewModels.HomeViewModel

<div class="text-center">
    <h4 class="display-5">Yo Yo Test</h4>
</div>

<div class="row">
    <div class="offset-5 col-md-3">
        <input type="button" id="btnPlay" value="Play" />
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <label>NEXT SHUTTLE</label>
    </div>
    <div class="col-md-4">
        <label>TOTAL TIME</label>
    </div>
    <div class="col-md-4">
        <label>TOTAL DISTANCE</label>
    </div>
</div>

<div class="container">
    @{
        var count = 1;
    }
    @foreach (var athelete in Model.Atheletes)
    {
        <div class="row">
            <div class="col-md-7">
                <label data-id="@athelete.Id">@count. @athelete.Name</label>
            </div>
            <div class="col-md-5">
                <input type="button" class="btn btn-warning" value="Warn" />
                <input type="button" class="btn btn-danger" value="Stop" />
            </div>
        </div>

        count++;
    }

